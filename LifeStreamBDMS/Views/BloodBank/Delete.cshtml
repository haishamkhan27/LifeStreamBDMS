@model LifeStreamBDMS.Models.BloodInventory

@{
    ViewData["Title"] = "Delete Inventory";
}

<h2>Delete Blood Inventory</h2>

<h4>Are you sure you want to delete this entry?</h4>

<div>
    <dl class="row">
        <dt class="col-sm-2">Blood Type</dt>
        <dd class="col-sm-10">@Model.BloodType</dd>

        <dt class="col-sm-2">Available Units</dt>
        <dd class="col-sm-10">@Model.AvailableUnits</dd>

        <dt class="col-sm-2">Status</dt>
        <dd class="col-sm-10">@Model.Status</dd>
    </dl>

    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">🗑 Confirm Delete</button>
        <a asp-action="Inventory" class="btn btn-secondary">Cancel</a>
    </form>
</div>
