@model IEnumerable<LifeStreamBDMS.Models.BloodRequest>
@{
    ViewData["Title"] = "Pending Blood Requests";
}
<h2>Pending Blood Requests</h2>

@if (!Model.Any())
{
    <p class="alert alert-info">No pending blood requests.</p>
}
else
{
    <table class="table table-bordered table-striped">
        <thead class="table-dark">
            <tr>
                <th>Donor Name</th>
                <th>Blood Type</th>
                <th>Contact</th>
                <th>Date</th>
                <th>Hospital</th>
                <th>Location</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var r in Model)
            {
                <tr>
                    <td>@r.DonorName</td>
                    <td>@r.BloodType</td>
                    <td>@r.ContactNumber</td>
                    <td>@r.RequestDate.ToShortDateString()</td>
                    <td>@r.HospitalName</td>
                    <td>@r.Location</td>
                    <td>
                        <a asp-action="Approve" asp-route-id="@r.Id" class="btn btn-success btn-sm">Accept</a>
                        <a asp-action="Reject" asp-route-id="@r.Id" class="btn btn-danger btn-sm">Reject</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
