@model LifeStreamBDMS.Models.Donor

@{
    ViewData["Title"] = "Donor Registration";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-lg border-0 rounded-4 p-4">
                <div class="card-body">
                    <h2 class="text-center text-danger fw-bold mb-4">
                        <i class="bi bi-person-heart"></i> Register as a Donor
                    </h2>

                    @if (TempData["SuccessMessage"] != null)
                    {
                        <div class="alert alert-success text-center">
                            @TempData["SuccessMessage"]
                        </div>
                    }

                    <form asp-action="Register" method="post" class="row g-3">
                        <div class="col-md-6">
                            <label asp-for="Name" class="form-label">Name</label>
                            <input asp-for="Name" class="form-control" placeholder="Enter your full name" />
                            <span asp-validation-for="Name" class="text-danger small"></span>
                        </div>

                        <div class="col-md-6">
                            <label asp-for="BloodType" class="form-label">Blood Type</label>
                            <select asp-for="BloodType" class="form-select">
                                <option value="">-- Select --</option>
                                <option>A+</option>
                                <option>O+</option>
                                <option>B+</option>
                                <option>AB+</option>
                                <option>A-</option>
                                <option>O-</option>
                                <option>B-</option>
                                <option>AB-</option>
                            </select>
                            <span asp-validation-for="BloodType" class="text-danger small"></span>
                        </div>

                        <div class="col-md-6">
                            <label asp-for="City" class="form-label">City</label>
                            <input asp-for="City" class="form-control" placeholder="e.g., Lahore, Karachi" />
                            <span asp-validation-for="City" class="text-danger small"></span>
                        </div>

                        <div class="col-md-6">
                            <label asp-for="ContactNumber" class="form-label">Contact Number</label>
                            <input asp-for="ContactNumber" class="form-control" placeholder="e.g., 03001234567" />
                            <span asp-validation-for="ContactNumber" class="text-danger small"></span>
                        </div>

                        <div class="col-md-6">
                            <label asp-for="LastDonationDate" class="form-label">Last Donation Date</label>
                            <input asp-for="LastDonationDate" type="date" class="form-control" />
                            <span asp-validation-for="LastDonationDate" class="text-danger small"></span>
                        </div>

                        <div class="text-center mt-4">
                            <button type="submit" class="btn btn-danger btn-lg px-4 shadow">
                                <i class="bi bi-clipboard-check-fill me-2"></i>Submit
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet" />
    <style>
        .form-control:focus, .form-select:focus {
            box-shadow: 0 0 0 0.25rem rgba(220, 53, 69, 0.25);
            border-color: #dc3545;
        }

        .btn-danger:hover {
            transform: scale(1.05);
        }

        .card {
            background-color: #fdfdfd;
        }
    </style>
}

@section Scripts {
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.3/jquery.validate.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.11/jquery.validate.unobtrusive.min.js"></script>
}
