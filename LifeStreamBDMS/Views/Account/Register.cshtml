@model LifeStreamBDMS.Models.RegisterViewModel

@{
    ViewData["Title"] = "Register";
}

<div class="container d-flex align-items-center justify-content-center min-vh-100 bg-light">
    <div class="card shadow-lg p-4 rounded-4 bg-white bg-opacity-75" style="max-width: 420px; width: 100%;">
        <div class="card-header bg-success text-white text-center rounded-4 mb-3">
            <h2><i class="bi bi-person-plus-fill me-1"></i> Register</h2>
        </div>

        <div class="card-body">
            <form asp-action="Register" method="post">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                <div class="mb-3">
                    <label asp-for="Username" class="form-label fw-semibold">Username</label>
                    <div class="input-group">
                        <span class="input-group-text"><i class="bi bi-person-circle"></i></span>
                        <input asp-for="Username" class="form-control" placeholder="Choose a username" required />
                    </div>
                    <span asp-validation-for="Username" class="text-danger small"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Password" class="form-label fw-semibold">Password</label>
                    <div class="input-group">
                        <span class="input-group-text"><i class="bi bi-lock-fill"></i></span>
                        <input asp-for="Password" type="password" class="form-control" placeholder="Enter password" required />
                    </div>
                    <span asp-validation-for="Password" class="text-danger small"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="ConfirmPassword" class="form-label fw-semibold">Confirm Password</label>
                    <div class="input-group">
                        <span class="input-group-text"><i class="bi bi-lock-fill"></i></span>
                        <input asp-for="ConfirmPassword" type="password" class="form-control" placeholder="Confirm password" required />
                    </div>
                    <span asp-validation-for="ConfirmPassword" class="text-danger small"></span>
                </div>

                <div class="d-grid gap-2 mt-4">
                    <button type="submit" class="btn btn-success btn-lg fw-bold">
                        <i class="bi bi-person-check-fill me-1"></i> Register as User
                    </button>
                </div>
            </form>

            @if (ViewContext.HttpContext.Session.GetString("UserRole") == "Admin")
            {
                <div class="mt-4 text-center">
                    <a class="btn btn-danger fw-semibold" asp-action="RegisterAdmin" asp-controller="Account">
                        <i class="bi bi-shield-plus me-1"></i> Register New Admin
                    </a>
                </div>
            }

            <div class="mt-4 text-center">
                <p class="mb-2">Already have an account?</p>
                <a class="btn btn-primary fw-semibold me-2" asp-action="Login" asp-controller="Account">
                    <i class="bi bi-box-arrow-in-right me-1"></i> Login as User
                </a>
                <a class="btn btn-warning text-dark fw-semibold" asp-action="Login" asp-controller="Account">
                    <i class="bi bi-shield-lock-fill me-1"></i> Login as Admin
                </a>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet" />
    <style>
        body {
            background: linear-gradient(to right, #f9f9f9, #e0eafc);
        }

        .card {
            backdrop-filter: blur(8px);
            background: rgba(255, 255, 255, 0.92);
        }

        .input-group-text {
            background-color: #f1f3f5;
            border-right: 0;
        }

        .form-control:focus {
            border-color: #198754;
            box-shadow: 0 0 0 0.2rem rgba(25, 135, 84, 0.25);
        }

        .btn:hover {
            transform: scale(1.02);
            transition: 0.2s ease;
        }
    </style>
}
