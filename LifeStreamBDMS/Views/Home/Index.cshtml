@{
    ViewData["Title"] = "Home Page";
}

<!-- Hero Section -->
<div class="hero-section d-flex align-items-center justify-content-center text-center text-white">
    <div class="overlay"></div>
    <div class="content container position-relative z-2" data-aos="fade-up">
        <h1 class="display-3 fw-bold mb-3">Join the LifeStream Blood Network</h1>
        <p class="lead mb-4">Every drop matters. Be a hero and donate today.</p>
        <div>
            <a href="@Url.Action("Register", "Donor")" class="btn btn-danger btn-lg me-3">❤️ Become a Donor</a>
            <a href="@Url.Action("PublicRequests", "BloodRequest")" class="btn btn-outline-light btn-lg">🩸 View Blood Requests</a>
        </div>
    </div>
</div>

<!-- Stats Section -->
<div class="container text-center py-5" data-aos="fade-up">
    <div class="row">
        <div class="col-md-4 mb-4">
            <div class="card shadow-lg border-0 py-4">
                <h3 class="text-danger">30+ Donations Today</h3>
                <p class="text-muted">Your contributions make a difference!</p>
            </div>
        </div>
        <div class="col-md-4 mb-4">
            <div class="card shadow-lg border-0 py-4">
                <h3 class="text-warning">Urgent: O+ Blood Needed</h3>
                <p class="text-muted">Immediate help required.</p>
            </div>
        </div>
        <div class="col-md-4 mb-4">
            <div class="card shadow-lg border-0 py-4">
                <h3 class="text-success">400+ Registered Donors</h3>
                <p class="text-muted">Join our community today.</p>
            </div>
        </div>
    </div>
</div>

<!-- How You Can Help Section -->
<div class="container text-center py-5" data-aos="fade-up">
    <h2 class="fw-bold mb-3">How You Can Help</h2>
    <p class="lead text-muted mb-5">Select how you'd like to contribute:</p>
    <div class="row">
        <div class="col-md-4 mb-4">
            <div class="card shadow-lg border-0 p-4 h-100">
                <i class="bi bi-heart-pulse-fill text-danger fs-1"></i>
                <h5 class="mt-3">Why Donate?</h5>
                <p class="mb-3">Save up to 3 lives with a single donation.</p>
                <a href="@Url.Action("Register", "Donor")" class="btn btn-outline-danger">Become a Donor</a>
            </div>
        </div>
        <div class="col-md-4 mb-4">
            <div class="card shadow-lg border-0 p-4 h-100">
                <i class="bi bi-envelope-open-heart-fill text-success fs-1"></i>
                <h5 class="mt-3">Need Blood?</h5>
                <p class="mb-3">Submit a request and get help fast.</p>
                <a href="@Url.Action("Request", "BloodRequest")" class="btn btn-outline-success">Request Blood</a>
            </div>
        </div>
        <div class="col-md-4 mb-4">
            <div class="card shadow-lg border-0 p-4 h-100">
                <i class="bi bi-droplet-half text-primary fs-1"></i>
                <h5 class="mt-3">View Requests</h5>
                <p class="mb-3">Check and respond to live requests.</p>
                <a href="@Url.Action("PublicRequests", "BloodRequest")" class="btn btn-outline-primary">Active Requests</a>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet" />
    <link href="https://unpkg.com/aos@2.3.4/dist/aos.css" rel="stylesheet" />
            

    <style>
        .hero-section {
            position: relative;
            background: url('/images/blood-donation-bg.jpg') no-repeat center center/cover;
            height: 100vh;
        }

            .hero-section .overlay {
                position: absolute;
                inset: 0;
                background-color: rgba(0, 0, 0, 0.5);
            }

            .hero-section .content {
                z-index: 2;
            }

        .btn {
            transition: all 0.3s ease;
        }

            .btn:hover {
                transform: scale(1.05);
            }

        .card {
            border-radius: 12px;
            transition: transform 0.3s ease;
        }

            .card:hover {
                transform: translateY(-5px);
            }
    </style>
}

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://unpkg.com/aos@2.3.4/dist/aos.js"></script>
    <script>
        AOS.init({
            duration: 1000,
            once: true
        });
    </script>
}
